<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %><br>
    <% end %>
<% end %>

<% if flash[:success] %>
    <% flash[:success] %>
<% end %>

<div class = "form_background">
<%= form_for @booking do |f| %>
    
    <p>Departing from: <%= f.collection_select :flight_id, Flight.all, :id, :departure %></p>
    <p>Going to: <%= f.collection_select :flight_id, Flight.all, :id, :destination %></p>
    <p>Seat Number: <%= f.select :seat_number, (1..56).map {|i| [i,i] } %></p>
    <p><%= f.submit %> </p>
    
<% end %>
</div>


